<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.moviezenapp.ui.MoviesFragment"
        android:label="Popular Movies"
        tools:layout="@layout/fragment_movies" />
    <fragment
        android:id="@+id/listsFragment"
        android:name="com.example.moviezenapp.ui.ListsFragment"
        android:label="Lists"
        tools:layout="@layout/fragment_lists">
        <action
            android:id="@+id/navigate_to_selected_list"
            app:destination="@+id/selected_list_fragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.moviezenapp.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/selected_list_fragment"
        android:name="com.example.moviezenapp.ui.SelectedListFragment"
        android:label="List"
        tools:layout="@layout/fragment_selected_list">
    </fragment>


</navigation>